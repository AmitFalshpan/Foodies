<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SearchRestaurant_constrains"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context=".SearchRestaurantFragment" />

    <TextView
        android:id="@+id/SearchRestaurant_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Search resturants"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/SearchRestaurant_loc_img_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/checkin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchRestaurant_tv" />

    <EditText
        android:id="@+id/SearchRestaurant_search_plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Search for a destination"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/SearchRestaurant_loc_img_view"
        app:layout_constraintTop_toBottomOf="@+id/SearchRestaurant_tv" />

    <ImageView
        android:id="@+id/SearchRestaurant_search_img_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:src="@drawable/search"
        app:layout_constraintBottom_toBottomOf="@+id/SearchRestaurant_search_plain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SearchRestaurant_search_plain"
        app:layout_constraintTop_toTopOf="@+id/SearchRestaurant_search_plain" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/SearchRestaurant_recycle"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchRestaurant_search_plain"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/SearchRestaurant_test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:text="test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SearchRestaurant_search_plain" />
</androidx.constraintlayout.widget.ConstraintLayout>
