<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyFriends_constrains"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B69F9F"
    tools:context=".MyFriendsFragment" >

    <ImageView
        android:id="@+id/MyFreinds_menu_img_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/MyFreinds_user_img_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/boy1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MyFreinds_newReview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:backgroundTint="@color/white"
        android:text="New review"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MyFriends_recycler"
        android:layout_width="409dp"
        android:layout_height="639dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/MyFreinds_newReview_tv"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/MyFriends_test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="272dp" />
</androidx.constraintlayout.widget.ConstraintLayout>