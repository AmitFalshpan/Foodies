<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:backgroundTint="#03A9F4">
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true">
    app:cardCornerRadius="8dp">
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/restaurant_row_img"
            android:layout_width="0dp"
            android:layout_height="206dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/restaurant1"

            />

        <TextView
            android:id="@+id/restaurant_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="restaurant name"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/restaurant_row_img"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_row_img" />

        <TextView
            android:id="@+id/restaurant_row_rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No rating yet"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_list_row_star1_iv"
            app:layout_constraintStart_toStartOf="@+id/restaurant_row_name"
            app:layout_constraintTop_toTopOf="@+id/restaurant_list_row_star1_iv" />

        <TextView
            android:id="@+id/restaurant_row_description"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="someone and 22 other friends visited vitrina"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/restaurant_row_name"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_list_row_star1_iv" />

        <ImageView
            android:id="@+id/restaurant_list_row_star1_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/restaurant_row_name"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_row_name"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/restaurant_list_row_star2_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_list_row_star1_iv"
            app:layout_constraintStart_toEndOf="@+id/restaurant_list_row_star1_iv"
            app:layout_constraintTop_toTopOf="@+id/restaurant_list_row_star1_iv"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/restaurant_list_row_star3_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_list_row_star2_iv"
            app:layout_constraintStart_toEndOf="@+id/restaurant_list_row_star2_iv"
            app:layout_constraintTop_toTopOf="@+id/restaurant_list_row_star2_iv"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/restaurant_list_row_star4_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_list_row_star3_iv"
            app:layout_constraintStart_toEndOf="@+id/restaurant_list_row_star3_iv"
            app:layout_constraintTop_toTopOf="@+id/restaurant_list_row_star3_iv"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/restaurant_list_row_star5_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/orange_1"
            app:layout_constraintBottom_toBottomOf="@+id/restaurant_list_row_star4_iv"
            app:layout_constraintStart_toEndOf="@+id/restaurant_list_row_star4_iv"
            app:layout_constraintTop_toTopOf="@+id/restaurant_list_row_star4_iv"
            app:srcCompat="@drawable/star" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
