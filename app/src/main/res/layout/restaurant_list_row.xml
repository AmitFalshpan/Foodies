<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#090909">

    <ImageView
        android:id="@+id/restaurant_row_img"
        android:layout_width="0dp"
        android:layout_height="206dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurant1" />

    <TextView
        android:id="@+id/restaurant_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="restaurant name"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/restaurant_row_img"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_row_img" />

    <TextView
        android:id="@+id/restaurant_row_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="someone and 22 other friends visited vitrina"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/restaurant_row_name"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_row_name" />

    <ImageView
        android:id="@+id/restaurant_list_star3_img_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/restaurant_row_description"
        app:layout_constraintEnd_toEndOf="@+id/restaurant_row_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_row_name"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/restaurant_list_row_star2_img_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_list_star3_img_view"
        app:layout_constraintEnd_toEndOf="@+id/restaurant_list_star3_img_view"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/restaurant_list_row_star1_img_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_list_row_star2_img_view"
        app:layout_constraintEnd_toStartOf="@+id/restaurant_list_row_star2_img_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/restaurant_list_row_star2_img_view"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/restaurant_list_row_star4_img_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="262dp"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_list_star3_img_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restaurant_list_star3_img_view"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_row_name"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/restaurant_list_row_star5_img_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="216dp"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_list_row_star4_img_view"
        app:layout_constraintEnd_toEndOf="@+id/restaurant_row_description"
        app:layout_constraintStart_toEndOf="@+id/restaurant_list_row_star4_img_view"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/restaurant_list_row_rating_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="7dp"
        android:text="No rating yet"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/restaurant_row_description"
        app:layout_constraintEnd_toEndOf="@+id/restaurant_row_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/restaurant_row_name" />
</androidx.constraintlayout.widget.ConstraintLayout>